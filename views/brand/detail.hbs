<a class="btn btn-info" href="/brand/add">Add new Brand</a>
<br><br>
<table class="table table-bordered">
   <tr>
      <th>Brand name</th>
      <th>Describe</th>
      <th>Brand image</th>
   </tr>
   {{#each brands }}
   <tr>
      <td>{{ name }}</td> 
      <td>{{describe}}</td>
      <td>
         <img src="{{ image }}" alt="" width="100" height="120">
      </td>
   </tr>
   {{/each}}
</table>