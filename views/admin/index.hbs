<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <form class="d-flex" action="/doll/search" method="post">
        <input class="form-control me-2" type="search" name="keyword" id="" required placeholder="Search by doll model">
        <button class="btn btn-primary" type="submit">Search</button>
      </form>
    </div>
  </div>

  <table class="table mt-4">
    <thead class="table-primary">
      <tr>
        <th>Product model</th>
        <th>Product brand</th>
        <th>Product image</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each robots }}
      <tr>
        <td>{{ model }}</td>
        <td>{{ brand.name }}</td>
        <td>
          <img src="{{ image }}" alt="{{ model }}" width="100" height="120">
        </td>
        <td>{{ price }}</td>
      </tr>
      {{/each}}
      {{#each dolls }}
      <tr>
        <td>{{ model }}</td>
        <td>{{ brand.name }}</td>
        <td>
          <img src="{{ image }}" alt="{{ model }}" width="100" height="120">
        </td>
        <td>{{ price }}</td>
      </tr>
      {{/each}}

    </tbody>
  </table>
</div>
