<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <a class="btn btn-info" href="/robot/add">Add new Robot</a>
    </div>
    <div class="col-md-6">
      <form class="d-flex" action="/robot/search" method="post">
        <input class="form-control me-2" type="search" name="keyword" id="" required placeholder="Search by robot model">
        <button class="btn btn-primary" type="submit">Search</button>
      </form>
    </div>
  </div>

  <table class="table mt-4">
    <thead class="table-primary">
      <tr>
        <th>Robot model</th>
        <th>Robot brand</th>
        <th>Robot image</th>
        <th>Price</th>
        <th colspan="2">Option</th>
      </tr>
    </thead>
    <tbody>
      {{#each robots }}
      <tr>
        <td>{{ model }}</td>
        <td>{{ brand.name }}</td>
        <td>
          <img src="{{ image }}" alt="{{ model }}" width="100" height="120">
        </td>
        <td>{{ price }}</td>
        <td>
          <a class="btn btn-warning" href="/robot/edit/{{ _id }}">Edit</a>
        </td>
        <td>
          <a class="btn btn-danger" href="/robot/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this robot ?');">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
